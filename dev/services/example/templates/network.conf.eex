# Network configuration generated by sysconfd
# Model: <%= sys["model"] %>
# Serial: <%= sys["serial_number"] %>

<%= for {interface, config} <- data["network"]["interfaces"] do %>
auto <%= interface %>
iface <%= interface %> inet <%= if config["dhcp"], do: "dhcp", else: "static" %>
<%= if config["mtu"] do %>    mtu <%= config["mtu"] %><% end %>
<%= if config["ssid"] do %>    wpa-ssid <%= config["ssid"] %><% end %>
<%= if config["psk"] do %>    wpa-psk <%= config["psk"] %><% end %>
<% end %>
